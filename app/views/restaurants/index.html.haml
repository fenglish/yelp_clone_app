- if @restaurants.any?
  - @restaurants.each do |restaurant|
    = link_to restaurant.name, restaurant_path(restaurant.id)
    = link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) # this means "/restaurants/#{restaurant.id}/edit"
    = link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete
- else
  %h1 No restaurants yet!
%br
%a(href=new_restaurant_path) Add a restaurant
