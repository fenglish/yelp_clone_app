- if @restaurants.any?
  - @restaurants.each do |restaurant|
    %h2= link_to restaurant.name, restaurant_path(restaurant)
    = image_tag restaurant.image.url(:thumb)
    %p= restaurant.description
    -if @user
      = link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant)
      -if @user.restaurants.include?( restaurant )
        = link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant)
        = link_to "Delete #{restaurant.name}", restaurant_path(restaurant), :method => :delete
    - if restaurant.reviews.any?
      %p Average rating: #{ star_rating(restaurant.average_rating) }
      - restaurant.reviews.each do |review|
        %p= pluralize review.endorsements.count, 'endorsement'
        = link_to "Endorse Review", review_endorsements_path(review), method: :post
        %p= review.thoughts
        %p= review.rating
        -if @user && @user.has_reviewed?( restaurant )
          = link_to "Delete #{restaurant.name} Review", review_path(restaurant, review), :method => :delete
- else
  %h1 No restaurants yet
%br
%br
= link_to "Add a restaurant", new_restaurant_path
